{
  "name": "selami/foundation",
  "type": "framework",
  "description": "A PHP Framework for Selamis",
  "keywords": ["Framework", "Micro Framework", "Diactoros", "Twig"],
  "homepage": "https://github.com/selamiphp/core",
  "license": "MIT",
  "authors": [
    {
      "name": "Mehmet Korkmaz",
      "email": "mehmet@mkorkmaz.com",
      "homepage": "https://mkorkmaz.com"
    }
  ],
  "require": {
    "php": "^7.1",
    "psr/container": "^1.0",
    "selami/router": "^0.5",
    "selami/views": "^0.2",
    "zendframework/zend-diactoros": "^1.3",
    "zendframework/zend-servicemanager": "^3.0",
    "zendframework/zend-config": "^3.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.0",
    "satooshi/php-coveralls": "~1.0",
    "phpunit/phpcov": "^4.0",
    "squizlabs/php_codesniffer": "^2.0",
    "symfony/http-foundation": "^3.2"
  },
  "autoload": {
    "psr-4": {
      "Selami\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MyApp\\": "app/"
    }
  }
}
